<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dip"
    app:cardElevation="5dip"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_gugan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1코스 1구간"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_startAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코스 시작 주소: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_gmCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="갈맷길 코스 정보: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_gmText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="갈맷길 코스 관련 정보: "
            android:textSize="16sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>